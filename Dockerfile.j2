WORKDIR /build
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o kusible .

## Actual Kusible COntainer 
FROM scratch
COPY --from=build /build/kusible /kusible
RUN chmod +x /kusible
CMD [ "kusible" ]